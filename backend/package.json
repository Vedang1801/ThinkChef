{
  "name": "backend",
  "version": "1.0.0",
  "description": "Think Chef Backend API - Restructured with layered architecture",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "dev:watch": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "prod": "NODE_ENV=production node dist/server.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop think-chef-api",
    "pm2:restart": "pm2 restart think-chef-api",
    "pm2:logs": "pm2 logs think-chef-api"
  },
  "keywords": [
    "recipe",
    "api",
    "nodejs",
    "typescript",
    "postgresql"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@huggingface/inference": "^3.13.0",
    "aws-sdk": "^2.1473.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^5.5.1",
    "pg": "^8.15.6",
    "pm2": "^6.0.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/multer": "^1.4.7",
    "@types/node": "^22.15.17",
    "@types/pg": "^8.10.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
